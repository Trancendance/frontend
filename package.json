{
    "name": "frontend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf dist && mkdir -p dist/assets",
        "typecheck": "tsc --noEmit",
        "build:css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css",
        "build:js": "esbuild src/ts/main.ts --bundle --outfile=dist/assets/main.js --format=esm --sourcemap",
        "copy:public": "cp -r public/* dist/",
        "build": "vite build",
        "watch:css": "tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch --poll",
        "dev:vite": "vite --host 0.0.0.0",
        "dev": "npm-run-all --parallel watch:css dev:vite",
        "format": "prettier -w .",
        "lint": "eslint ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.17",
        "@types/estree": "^1.0.8",
        "@types/json-schema": "^7.0.15",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.17",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.9.3",
        "vite": "^7.1.9"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.14"
    }
}
